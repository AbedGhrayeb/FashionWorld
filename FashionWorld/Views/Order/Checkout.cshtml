@model Order
<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away!</p>

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <h3>Ship to</h3>
    <div class="form-group">
        <label class="col-form-label">User  : </label>
        <div class="col-md-10 form-control-static">
            @Html.DisplayFor(model => Model.UserId)
            @Html.HiddenFor(model => Model.UserId)
        </div>
    </div>
    <div class="form-group">
        <label>Fisrt Name:</label><input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Last Name:</label><input asp-for="LastName" class="form-control" />
    </div>

    <h3>Address</h3>

    <div class="form-group">
        <label>Country:</label><input asp-for="DeliveryAddress.County" class="form-control" />
    </div>
    <div class="form-group">
        <label>City:</label><input asp-for="DeliveryAddress.Town" class="form-control" />
    </div>
    <div class="form-group">
        <label>Address:</label><input asp-for="DeliveryAddress.AddressLine1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Address:</label><input asp-for="DeliveryAddress.AddressLine2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Postal Code:</label><input asp-for="DeliveryAddress.Postcode" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone:</label><input asp-for="Phone" class="form-control" />
    </div>

    <h3>Options</h3>
    <div class="checkbox">
        <input asp-for="GiftWrap" style="display:inline" class="" />
        <label>
            Gift wrap these items
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
</form>