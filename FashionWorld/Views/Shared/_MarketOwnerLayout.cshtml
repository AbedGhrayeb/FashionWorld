
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3 col-sm-10 bg-secondary m-r-1 text-center">

        <!-- sidebar -->
        <img asp-append-version="true" src="~/images/admin.jpeg" width="100" class="img-thumbnail mt-3" />
        <h5 class="text-white bottom-border">Owner: @User.Identity.Name</h5>
        <ul class="navbar-nav flex-column mt-4">
            <li class="nav-item"><a href="#" class="nav-link text-white p-3 mb-2 current"><i class="fas fa-home text-light fa-lg mr-3"></i>Dashboard</a></li>
            <li class="nav-item"><a href="~/Identity/Account/Manage" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fas fa-user text-light fa-lg mr-3"></i>Profile</a></li>
            <li class="nav-item"><a asp-action="Index" asp-controller="Products" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fas fa-envelope text-light fa-lg mr-3"></i>Products</a></li>
            <li class="nav-item"><a asp-action="Index" asp-controller="Markets" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fas fa-shopping-cart text-light fa-lg mr-3"></i>My Market</a></li>
            
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class=" btn btn-link nav-link text-white p-3 mb-2 sidebar-link">
                        <i class="fas fa-sign-out-alt text-light fa-lg mr-3"></i>
                        Logout
                    </button>
                </form>
            </li>


        </ul>
    </div>
    <!-- end of sidebar -->






    <div class="col-md-9 col-sm-10 pl-3">
        @RenderBody()
    </div>
</div>

@RenderSection("Scripts", required: false)





