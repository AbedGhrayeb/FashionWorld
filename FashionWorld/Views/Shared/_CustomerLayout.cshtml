
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-3 col-sm-10 bg-secondary text-center" style="background-color:black">

        <!-- sidebar -->
        <img asp-append-version="true" src="~/images/admin.jpeg" width="100" class="img-thumbnail mt-3" />
        <h5 class="text-white bottom-border">Hello: @User.Identity.Name</h5>
        <ul class="navbar-nav flex-column mt-4">
            <li class="nav-item"><a href="#" class="nav-link text-white p-3 mb-2 current"><i class="fas fa-home text-light fa-lg mr-3"></i>Dashboard</a></li>
            <li class="nav-item"><a href="~/Identity/Account/Manage" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fas fa-user text-light fa-lg mr-3"></i>Profile</a></li>
            <li class="nav-item"><a asp-action="List" asp-controller="Order" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fas fa-shopping-cart text-light fa-lg mr-3"></i>Orders</a></li>
            <li class="nav-item"><a asp-action="Charge" asp-controller="Order" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fas fa-credit-card text-light fa-lg mr-3"></i>Payment</a></li>
            <li class="nav-item"><a asp-action="Index" asp-controller="Favorits" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fas fa-heart text-light fa-lg mr-3"></i>Favorites</a></li>
            <li class="nav-item"><a asp-action="Offer" asp-controller="Home" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fas fa-bullhorn text-light fa-lg mr-3"></i>Offers</a></li>
            <li class="nav-item"><a asp-action="Index" asp-controller="Favorits" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fas fa-bell text-light fa-lg mr-3"></i>Notifications</a></li>

            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class=" btn btn-link nav-link text-white p-3 mb-2 sidebar-link">
                        <i class="fa fa-sign-out-alt text-light fa-lg mr-3"></i>
                        Logout
                    </button>
                </form>
            </li>


        </ul>
    </div>
    <!-- end of sidebar -->






    <div class="col-md-9 col-sm-10 pl-3">
        @RenderBody()
    </div>
</div>

@RenderSection("Scripts", required: false)






