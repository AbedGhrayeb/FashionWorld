@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password";
}


<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <h2 class="text-center text-danger">@ViewData["Title"]</h2>
        <p class="lead text-muted text-light text-center">Enter your email that used to manage your account and we will email to resert a password</p>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
              
                <input asp-for="Input.Email" placeholder="Email Address" class="form-control" aria-label="Email Address" aria-describedby="basic-addon1"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            <button type="submit" class="btn btn-dark btn-block">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
